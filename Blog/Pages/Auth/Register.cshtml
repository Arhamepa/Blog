@page
@model Blog.Pages.Auth.RegisterModel
@{
    Layout= "Shared/_AuthLayout";
    ViewData["Title"] = "ثبت نام";
}
<div class="container">
    <section id="content">
        <form method="post">
            <h1>ورود به سایت</h1>
            <div>
                <input type="text" asp-for="UserName" placeholder="نام کاربری"  />
                <span asp-validation-for="UserName" style="color:red"></span>
            </div>
            <div>
                <input type="text" asp-for="FullName" placeholder="نام و نام خانوادگی"  />
                <span asp-validation-for="FullName" style="color:red"></span>
            </div>
            <div>
                <input type="password" asp-for="Password" placeholder="کلمه عبور" />
                <span asp-validation-for="Password" style="color:red"></span>
            </div>
            <div>
                <input type="submit" value="ثبت نام" />
                <a asp-page="../Index">بازگشت به سایت</a>
            </div>
        </form>
    </section>
</div>
